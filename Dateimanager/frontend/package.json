{
	"name": "optiflow-filemanager",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"main": "electron-main.js",
	"scripts": {
		"dev": "vite",
		"build": "tsc && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"electron:start": "electron .",
		"app:dev": "concurrently \"npm run dev\" \"wait-on http-get://localhost:5173 && npm run electron:start\"",
		"electron:build": "npm run build && electron-builder"
	},
	"dependencies": {
		"@codemirror/lang-javascript": "^6.2.4",
		"@codemirror/language": "^6.11.1",
		"@codemirror/state": "^6.5.2",
		"@codemirror/theme-one-dark": "^6.1.2",
		"@codemirror/view": "^6.37.2",
		"@uiw/react-codemirror": "^4.23.13",
		"axios": "^1.9.0",
		"electron-is-dev": "^3.0.1",
		"lucide-react": "^0.511.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-toastify": "^11.0.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.25.0",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.4.1",
		"concurrently": "^9.1.2",
		"electron": "^36.2.1",
		"electron-builder": "^26.0.12",
		"eslint": "^9.25.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^6.3.5",
		"wait-on": "^8.0.3"
	},
	"build": {
		"appId": "com.optiflow.filemanager",
		"productName": "OptiFlow Dateimanager",
		"directories": {
			"output": "release"
		},
		"files": [
			"dist/**/*",
			"electron-main.js",
			"preload.js"
		],
		"extraResources": [
			{
				"from": "../doc/documentation/template",
				"to": "doc"
			}
		],
		"extraFiles": [
			{
				"from": "../dist/OptiFlowFileManager",
				"to": "backend",
				"filter": [
					"**/*"
				]
			}
		],
		"asarUnpack": [
			"backend/**/*"
		],
		"win": {
			"target": "nsis",
			"icon": "public/icon.ico"
		},
		"mac": {
			"category": "public.app-category.utilities",
			"target": "dmg",
			"icon": "public/icon.icns"
		},
		"linux": {
			"target": "AppImage",
			"icon": "public/icon.png"
		}
	}
}
